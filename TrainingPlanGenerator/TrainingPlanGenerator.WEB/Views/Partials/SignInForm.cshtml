@model SignInFormViewModel

@{
	Layout = null;
	var actionName = nameof(UserController.SignIn);
	var controllerName = nameof(UserController).Replace(nameof(Controller), "");
}

@using (Html.BeginForm(actionName, controllerName, FormMethod.Post))
{
	<img class="mb-4" src="~/logo.svg" alt="" width="72" height="57" onclick="window.location.href='/'">
	<h1 class="h3 mb-3 fw-normal">Please sign in</h1>

	<div class="form-floating">
		@Html.TextBoxFor(x => x.Email, new {
			type = "email",
			@class = "form-control",
			placeholder = "name@example.com",
			id = "floatingInput"
		})
		@Html.LabelFor(x => x.Email, "Email address")
	</div>

	<div class="form-floating">
		@Html.PasswordFor(x => x.Password, new {
			type = "password",
			@class = "form-control",
			id = "floatingPassword",
			placeholder = "Password"
		})
		@Html.LabelFor(x => x.Password, "Password")
	</div>

	<div class="checkbox mb-3">
		<label>
			@Html.CheckBoxFor(x => x.RememberMe) Remember me
		</label>
	</div>
	<button class="w-100 btn btn-lg btn-primary" type="submit">Sign in</button>
}