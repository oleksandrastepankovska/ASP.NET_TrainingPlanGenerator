@model RegistrationFormViewModel

@using TrainingPlanGenerator.Web.Controllers

@{
	Layout = null;
	var actionName = nameof(UserController.Register);
	var controllerName = nameof(UserController).Replace(nameof(Controller), "");
}

@using (Html.BeginForm(actionName, controllerName, FormMethod.Post))
{
	@Html.LabelFor(x => x.FirstName, "First Name");
	@Html.TextBoxFor(x => x.FirstName);
	@Html.ValidationMessageFor(x => x.FirstName);
	<br/>

	@Html.LabelFor(x => x.LastName, "Last Name");
	@Html.TextBoxFor(x => x.LastName);
	@Html.ValidationMessageFor(x => x.LastName);
	<br/>

	@Html.LabelFor(x => x.Email, "Email");
	@Html.TextBoxFor(x => x.Email);
	@Html.ValidationMessageFor(x => x.Email);
	<br/>

	@Html.LabelFor(x => x.Password, "Password");
	@Html.TextBoxFor(x => x.Password);
	@Html.ValidationMessageFor(x => x.Password);	
	<br/>

	<button type="submit">Submit</button>
}